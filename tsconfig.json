{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "locale": "ko",
    "lib": [ "dom", "es5", "es6", "es2015" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "./built/",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "strictPropertyInitialization": false
  },
  "types": [
    "jest"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}